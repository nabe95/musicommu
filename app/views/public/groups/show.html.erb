<div class = 'container'>
  <div class = 'row'>
    <div class = 'col'>
      <h4>グループ詳細</h4>
      <table class = 'table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan ="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.group_image.attached? %>
                <%= image_tag @group.group_image,size:"50x50" %>
              <% else %>
                <%= image_tag 'no_image',size:"50x50" %>
              <% end %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |user| %>
              <li style="list-style: none;">
              <%= user.name %>
              <% end %>
            </td>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to '編集', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              <% elsif @group.includesUser?(current_user)%>
                <%= link_to '退出する', group_group_users_path(@group), method: :delete, class: "btn btn-sm btn-danger" %>
              <% else %>
　　            <%= link_to '参加する', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %>
              <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
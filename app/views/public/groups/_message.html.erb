<% if messages.present? %>
  <% messages.each do |message| %>
    <% my_user_id == message.user.id %>
  <table>
    <td>
      <%= link_to user_path(message.user) do %>
        <%= image_tag message.user.get_profile_image, size: "50x50" %><br>
        <%= message.user.name %><br>
        <%= message.created_at.strftime("%m/%d %H:%M")%>
      <% end %>
    </td>
    <td>
      <p><%= message.message %></p>
    </td>
  </table>
  <% end %>
<% end %>


<%= form_for Message.new, url: group_messages_path(group) do |f| %>
  <%= f.text_field :message, placeholder: "メッセージを入力して下さい", size: 50, class: "form-text-field" %>
  <%= f.hidden_field :group_id, value: group.id %>
  <%= f.submit "投稿", class: 'form-submit' %>
<% end %>
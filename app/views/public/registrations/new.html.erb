<div class="container">
  <div class="row justify-content-center my-2 ">
    <div class ="col-md-6">

      <div class="text-center my-2">
        <h3>新規登録</h3>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <table class="table-form table-borderless">
          <tr>
            <td><%= f.label :"名前(ニックネーム)" %></td>
            <td><%= f.text_field :name, style: "width: 300px;", placeholder: "2〜20文字以内" %></td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 300px;" %></td>
          </tr>
          <tr>
            <td><%= f.label :"都道府県" %></td>
            <td><%= f.text_field :prefecture, style: "width: 300px;" %></td>
          </tr>
          <tr>
            <td><%= f.label :"年齢" %></td>
            <td><%= f.text_field :age, placeholder: "数字のみ入力", style: "width: 300px;" %></td>
          </tr>
          <tr>
            <td><%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> 文字以上)</em>
                <% end %>
            </td>
            <td><%= f.password_field :password, autocomplete: "new-password", style: "width: 300px;" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 300px;" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "　新規登録　", class:"btn btn-sm btn-success" %></td>
          </tr>
        </table>
      <% end %>

      <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>

      <div class="text-center my-2">
        <h3>既に登録済みの方</h3>
          <div>
            <%= link_to 'こちら', new_user_session_path,class: "ml-5" %>からログインしてください。
          </div>
      </div>

    </div>
  </div>
</div>
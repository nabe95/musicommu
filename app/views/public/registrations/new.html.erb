<div class="container">
  <div class="row justify-content-center mt-2 mb-2">
    <div class="col">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :"名前(ニックネーム)" %>
          <%= f.text_field :name %>
        </div>
      
        <div class="field">
          <%= f.label :"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="field">
          <%= f.label :"都道府県" %>
          <%= f.text_field :prefectures, placeholder: "都、県、府は省略" %>
        </div>
        
          <div class="field">
          <%= f.label :"年齢" %>
          <%= f.text_field :age, placeholder: "数字のみ入力" %>歳
        </div>
      
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions">
          <%= f.submit "新規会員登録", class:"btn btn-success" %>
        </div>
      <% end %>

      <h3>既に登録済みの方</h3>
      <div>
        <%= link_to 'こちら', new_user_session_path,class: "ml-5" %>からログインしてください。
      </div>
    </div>
  </div>
</div>
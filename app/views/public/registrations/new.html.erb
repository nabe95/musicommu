<div class="container">
  <div class="row justify-content-center mt-2 mb-2">
    <div class="col">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        
        <table>
        <tr>
          <th><%= f.label :"名前(ニックネーム)" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :"メールアドレス" %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <th><%= f.label :"都道府県" %></th>
          <td><%= f.text_field :prefectures %></td>
        </tr>
        <tr>
          <th><%= f.label :"年齢" %></th>
          <td><%= f.text_field :age, placeholder: "数字のみ入力" %></td>
        </tr>
        <tr>
          <th><%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th><%= f.label :password_confirmation %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "新規会員登録", class:"btn btn-success" %></td>
        </tr>
        </table>
      <% end %>

      <h3>既に登録済みの方</h3>
      <div>
        <%= link_to 'こちら', new_user_session_path,class: "ml-5" %>からログインしてください。
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center my-2">
    <div class="col">
      
      <div class="text-center">
        <h3>タグ一覧</h3>
      </div>

        <% @tag_list.each do |list| %>
          <i class="fas fa-tag"></i>
          <%=link_to list.name,search_tag_path(tag_id: list.id) %>
          <%="(#{list.posts.count})" %>
        <% end %>

    </div>
  </div>
</div>
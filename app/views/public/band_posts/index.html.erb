<div class="container">
  <div class="row justify-content-center mt-2 mb-2">
    <div class="col">
      <h4>募集一覧</h4>
      <%= link_to "　新規投稿する　", new_band_post_path, class:"btn btn-primary" %>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿時間</th>
            <th>タイトル</th>
            <th>ユーザー</th>
          </tr>
        </thead>
        <tbody>
          <% @band_posts.each do |post| %>
          <tr>
            <td><%= band_post.created_at.strftime("%Y/%m/%d %H:%M")%></td>
            <td><%= link_to band_post.title,band_post %></td>
            <td><%= link_to(band_post.user) do %>
              <%= image_tag band_post.user.get_profile_image, size:'50x50' %>
              <%= band_post.user.name %></td>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
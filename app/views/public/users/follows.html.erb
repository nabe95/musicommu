<div class="container">
  <div class="row my-2">
    <div class="col">
      <div class="text-center">
        <h3><%= @user.name %>さんがフォローしているユーザー</h3>
        <% if @users.any? %>
          <%= render "index", users: @users %>
        <% else %>
          <div class="alert alert-info" role="alert">
            他のユーザーをフォローしていません
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
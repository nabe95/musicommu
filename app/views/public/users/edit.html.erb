<div class="container">
  <div class="row my-2">
    <div class="col">

      <h2>プロフィール編集</h2>
      <%= form_with model:@user do |f| %>
        <%= render "public/shared/error_messages", resource: @user %>
        <table>
          <tr>
            <th>プロフィール画像</th>
            <td><%= f.file_field :profile_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>名前(ニックネーム)</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <td><%= f.text_field :introduction %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= f.text_field :age %></td>
          </tr>
          <tr>
            <th>都道府県</th>
            <td><%= f.text_field :prefectures %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit class: 'btn btn-secondary' %></td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>
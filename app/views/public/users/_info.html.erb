<table class='table'>
  <tr>
    <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
    <td style="vertical-align: middle; height: 100px;"><%= user.name %></td>
  </tr>
  <tr>
    <td colspan="2"><自己紹介><br><%= user.introduction %></td>
  </tr>
  <tr>
    <td colspan="2"><好きなジャンル><br><%= user.genre %></td>
  </tr>
  <tr>
    <td colspan="2"><好きなアーティスト><br><%= user.artist %></td>
  </tr>
  <tr>
    <td><%= user.prefecture %></td>
    <td><%= user.age %>歳</td>
  </tr>
</table>
<%= link_to "いいね一覧", favorites_user_path(@user), class: "btn btn-outline-danger btn-block" %>
<%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
<i class="fas fa-user-cog"></i>
<% end %>
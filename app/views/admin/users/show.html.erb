<div class="container">
  <div class="row justify-content-center my-2 ">
    <div class ="col-md-6">
      <div class="text-center my-2">
        <h3><%= @user.name %>さんの会員詳細</h3>
      </div>
      <table class='table'>
        <tr>
          <td>プロフィール画像</td>
          <td><%= image_tag @user.get_profile_image, size:'100x100' %></td>
        </tr>
        <tr>
          <td>名前</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>好きなジャンル</td>
          <td><%= @user.genre %></td>
        </tr>
        <tr>
          <td>好きなアーティスト</td>
          <td><%= @user.artist %></td>
        </tr>
        <tr>
          <td>都道府県</td>
          <td><%= @user.prefecture %></td>
        </tr>
        <tr>
          <td>年齢</td>
          <td><%= @user.age %>歳</td>
        </tr>
        <tr>
          <td>会員ステータス</td>
        <% if @user.is_active == true %>
          <td class="text-success">有効</td>
        <% else %>
          <td class="text-danger">退会</td>
        <% end %>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to "編集する",edit_admin_user_path, class: "btn btn-success"%> </td>
        </tr>
      </table>
    </div>
  </div>
</div>
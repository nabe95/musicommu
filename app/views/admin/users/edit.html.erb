<div class="container">
  <div class="row">
    <div class="col-md-6">
      
      <h4><%= @user.name %>さんの会員情報編集</h4>
            <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <%= render "public/shared/error_messages", resource: @user %>
        <table>
          <tr>
            <th>プロフィール画像</th>
            <td><%= f.file_field :profile_image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th>名前(ニックネーム)</th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= f.text_field :introduction %></td>
          </tr>
          <tr>
            <th>年齢</th>
            <td><%= f.text_field :age %></td>
          </tr>
          <tr>
            <th>都道府県</th>
            <td><%= f.text_field :prefecture %></td>
          </tr>
          <tr>
            <th>好きなジャンル</th>
            <td><%= f.text_field :genre %></td>
          </tr>
          <tr>
            <th>好きなアーティスト</th>
            <td><%= f.text_field :artist %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_active, :true %>
              <%= f.label :有効 %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :退会 %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
      
    </div>
  </div>
</div>
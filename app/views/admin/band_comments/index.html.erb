<div class="container">
  <div class="row my-2">
    <div class="col">
      <div class="text-center">
        <h3>メンバー募集へのコメント一覧</h3>
      </div>
      <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th>コメント</th>
          <th></th>
          <th>ユーザー</th>
          <th>コメントした投稿</th>
        </tr>
        <% @band_comments.each do |band_comment| %>
        <tr>
          <td><%= band_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= band_comment.comment %></td>
          <td>
            <%= link_to '削除', admin_band_comment_path(band_comment), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
          </td>
          <td>
            <%= link_to admin_user_path(band_comment.user), class: 'd-flex align-items-center' do %>
              <span class="profile-image-container">
                <%= image_tag band_comment.user.get_profile_image, class: 'profile-image' %>
              </span>
              <%= band_comment.user.name %>
            <% end %>
          </td>
          <td><%= band_comment.band_post.title %></td>
        </tr>
        <% end %>
      </table>

      <div class ="d-flex justify-content-center">
        <%= paginate @band_comments %>
      </div>

    </div>
  </div>
</div>
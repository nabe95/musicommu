<div class="container">
  <div class="row my-2">
    <div class="col">
      <div class="text-center">
        <h3>投稿へのコメント一覧</h3>
      </div>
      <table class='table table-hover table-inverse'>
        <tr>
          <th></th>
          <th>コメント</th>
          <th></th>
          <th>ユーザー</th>
          <th>コメントした投稿</th>
        </tr>
        <% @post_comments.each do |post_comment| %>
        <tr>
          <td><%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= post_comment.comment %></td>
          <td>
            <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
          </td>
          <td>
            <%= link_to admin_user_path(post_comment.user), class: 'd-flex align-items-center' do %>
              <span class="profile-image-container">
                <%= image_tag post_comment.user.get_profile_image, class: 'profile-image' %>
              </span>
              <%= post_comment.user.name %>
            <% end %>
          </td>
          <td><%= post_comment.post.title %></td>
        </tr>
        <% end %>
      </table>

      <div class ="d-flex justify-content-center">
        <%= paginate @post_comments %>
      </div>

    </div>
  </div>
</div>